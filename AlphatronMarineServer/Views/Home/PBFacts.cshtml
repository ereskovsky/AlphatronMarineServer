

<div style="margin-left:0px" class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <ol class="breadcrumb">
            <li>
                <a href="~/">Home</a>
            </li>
            <li>
                <a href="~/Products">Products</a>
            </li>
            <li class="active">
                <strong>Bullet Facts</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
        <div class="ibox-title" style="border: none; padding: 28px 15px 7px">
            <a class="btn btn-primary " href="~/Product/@ViewBag.PID/Fact/0">Add Fact</a>
        </div>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
             
                <div class="ibox-content">

                    <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="8">
                        <thead>
                            <tr>

                                <th>ID</th>
                                <th>Fact</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.Facts)
                            {
                                <tr>
                                    <td>@item.ID</td>
                                    <td>@item.Fact</td>
                                    <td>
                                        <a href="~/Product/@item.ProductID/Fact/@item.ID"><i class="fa fa-edit" style="color: #1ab394 !important"></i></a>
                                        <a id="del" href="~/Product/@item.ProductID/Fact/@item.ID/del"><i class="fa fa-trash-o" style="color: #1ab394 !important"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="8">
                                    <ul class="pagination pull-right"></ul>
                                </td>
                            </tr>
                        </tfoot>
                    </table>

                </div>
            </div>
        </div>
    </div>

</div>

