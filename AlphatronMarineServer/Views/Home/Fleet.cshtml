

<div style="margin-left:0px" class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Fleet</h2>
        <ol class="breadcrumb">
            <li>
                <a href="~/">Home</a>
            </li>
            <li class="active">
                <strong>Fleet</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
        <div class="ibox-title" style="border: none; padding: 28px 15px 7px">
            <a class="btn btn-primary " href="~/Vessel/0">Add Vessel</a>
        </div>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                
                <div class="ibox-content">

                    <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="8">
                        <thead>
                            <tr>

                                <th>IMO</th>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Class</th>
                                <th>MMSI</th>
                                <th>Gross Tonnage</th>
                                <th>Annual Check Date</th>
                                <th>Company</th>
                                <th>Flag</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in ViewBag.Vessels){ 
                            <tr>
                                <td>@item.IMO</td>
                                <td><a href="Vessel/@item.IMO/Equipment"> @item.Name </a></td>
                                <td>@item.Type</td>
                                <td>@item.Class</td>
                                <td>@item.MMSI</td>
                                <td>@item.GrossTonnage</td>
                                <td>@item.AnnualCheckDate</td>
                                <td>@item.Company.Name</td>
                                <td><img src="/Content/images/flags/@item.Country.Flag32" /></td>
                                <td>
                                    <a href="~/Vessel/@item.IMO"><i class="fa fa-edit" style="color: #1ab394 !important"></i></a>
                                    <a id="del" href="~/Vessel/@item.IMO/del"><i class="fa fa-trash-o" style="color: #1ab394 !important"></i></a>
                                </td>
                            </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="8">
                                    <ul class="pagination pull-right"></ul>
                                </td>
                            </tr>
                        </tfoot>
                    </table>

                </div>
            </div>
        </div>
    </div>
    
</div>

