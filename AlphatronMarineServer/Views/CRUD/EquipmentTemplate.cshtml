@model AlphatronMarineServer.Models.Equipment
@{

}
<link href="~/Content/daterangepicker-bs3.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-datepicker.js"></script>
<div style="margin: 0px" class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h2>Add or Change Equipment </h2>
        <ol class="breadcrumb">
            <li>
                <a href="~/">Main</a>
            </li>
            <li>
                <a href="~/EquipmentTemplates">Equipment Templates</a>
            </li>
            <li class="active">
                <strong>Add or Change Equipment Template</strong>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <form autocomplete="off" method="post" class="form-horizontal" action="/Vessel/@ViewBag.VIMO/Equipment/@ViewBag.EID" role="form" enctype="multipart/form-data">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Serial Number</label>

                            <div class="col-sm-5">
                                @if (ViewBag.EID == 0)
                                {
                                    <input type="text" name="SerialNumber" class="form-control" value="@Model.SerialNumber">
                                }
                                else
                                {
                                    <input type="text" disabled name="SerialNumber" class="form-control" value="@Model.SerialNumber">
                                }
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Equipment Type</label>
                            <div class="col-sm-5">
                                <select id="select_id" onchange="val()" class="eqtemplate form-control m-b" name="TemplateID">
                                    @if (Model.TemplateID != null)
                                    {
                                        <option value="@Model.TemplateID">@Model.EquipmentTemplates.Name</option>
                                    }

                                    @foreach (var item in ViewBag.EquipmentTemplates)

                                    {

                                        <option value="@item.ID">@item.Name</option>
                                    }
                                </select>

                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Name</label>

                            <div class="col-sm-5"><input type="text" name="Name" class="form-control" value="@Model.Name"></div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Maker</label>

                            <div class="col-sm-5"><input type="text" name="Maker" class="form-control" value="@Model.Maker"></div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Model</label>

                            <div class="col-sm-5"><input type="text" name="Model" class="form-control" value="@Model.Model"></div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Remarks</label>

                            <div class="col-sm-5"><input type="text" name="Remarks" class="form-control" value="@Model.Remarks"></div>
                        </div>
                        <div class="form-group" id="data_1">
                            <label class="col-sm-2 control-label">Check date</label>
                            <div class=" col-sm-5 input-group date">
                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input value="@Model.CheckDate" type="text" name="CheckDate" class="form-control">
                            </div>
                        </div>
                        

                        @*@foreach (var item in Model.EquipmentTemplates.FieldsList)
                                {
                                                <div class="form-group">
                                                    <label class="col-sm-2 control-label">@item.Name</label>

                                                    <div class="col-sm-5"><input type="text" name="@item.Name" class="form-control" value="@Model.GetFieldValue(@item.Name)"></div>
                                                </div>
                            }*@

                        <a href="~/Vessel/@ViewBag.VIMO/Equipment" style="text-decoration: none; color: #676a6c"><button class="btn btn-white" type="button">Back</button></a>
                        <button class="btn btn-primary" type="submit">Save</button>
                    </form>
                </div>
            </div>


        </div>
    </div>
</div>
