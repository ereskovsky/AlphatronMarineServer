@model AlphatronMarineServer.Models.BusinessLocation
@{

}
<link href="~/Content/daterangepicker-bs3.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-datepicker.js"></script>
<div style="margin: 0px" class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h2>Vessel</h2>
        <ol class="breadcrumb">
            <li>
                <a href="~/">Main</a>
            </li>
            <li class="active">
                <strong>Add or Change User</strong>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <form autocomplete="off" method="post" class="form-horizontal" role="form" enctype="multipart/form-data">
                        <div style="display:none" class="form-group">
                            <label class="col-sm-2 control-label">ID</label>
                            <div class="col-sm-5"><input type="text" name="ID" class="form-control" value="@Model.ID"></div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Name</label>

                            <div class="col-sm-5"><input type="text" name="Name" class="form-control" value="@Model.Name"></div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Email</label>

                            <div class="col-sm-5"><input type="text" name="Email" class="form-control" value="@Model.Email"></div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Description</label>

                            <div class="col-sm-5"><input type="text" name="Description" class="form-control" value="@Model.Description"></div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Phone Number</label>

                            <div class="col-sm-5"><input type="text" name="PhoneNumber" class="form-control" value="@Model.PhoneNumber"></div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Picture</label>

                            <div class="col-sm-5"><input type="file" name="ImageURL" class="form-control" value="@Model.ImageURL"></div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Partner</label>

                            <div class="col-sm-1"><input type="checkbox" name="IsPartner" class="form-control" value="@Model.IsPartner"></div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Latitude</label>

                            <div class="col-sm-5"><input type="text" name="Latitude" class="form-control" value="@Model.Latitude"></div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Longtitude</label>
                            <div class="col-sm-5"><input type="text" name="Longtitude" class="form-control" value="@Model.Longtitude"></div>
                        </div>


                        <a href="~/Locations" style="text-decoration: none; color: #676a6c"><button class="btn btn-white" type="button">Back</button></a>
                        <button class="btn btn-primary" type="submit">Save</button>
                    </form>
                </div>
            </div>


        </div>
    </div>
</div>