@model AlphatronMarineServer.Models.Vessel
@{

}
   <link href="~/Content/daterangepicker-bs3.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-datepicker.js"></script>
<div style="margin: 0px" class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h2>Vessel</h2>
        <ol class="breadcrumb">
            <li>
                <a href="~/">Main</a>
            </li>
            <li class="active">
                <strong>Add or Change Vessel</strong>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <form autocomplete="off" method="post" class="form-horizontal" role="form" enctype="multipart/form-data">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">IMO</label>

                            <div class="col-sm-5"><input type="text" name="IMO" class="form-control" value="@Model.IMO"></div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Name</label>

                            <div class="col-sm-5"><input type="text" name="Name" class="form-control" value="@Model.Name"></div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Type</label>

                            <div class="col-sm-5"><input type="text" name="Type" class="form-control" value="@Model.Type"></div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">MMSI</label>

                            <div class="col-sm-5"><input type="text" name="MMSI" class="form-control" value="@Model.MMSI"></div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">CallSign</label>

                            <div class="col-sm-5"><input type="text" name="CallSign" class="form-control" value="@Model.CallSign"></div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Gross Tonnage</label>

                            <div class="col-sm-5"><input type="text" name="GrossTonnage" class="form-control" value="@Model.GrossTonnage"></div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Class</label>

                            <div class="col-sm-5"><input type="text" name="Class" class="form-control" value="@Model.Class"></div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Country</label>
                            <div class="col-sm-5">
                                <select class="form-control m-b" name="Flag">
                                    @if (Model.Flag != 0)
                                       {
                                            <option value="@Model.Flag">@Model.Country.Name</option>
                                       }

                                     @foreach (var item in ViewBag.Countries)

                                       {

                                         <option value="@item.ID">@item.Name</option>
                                       }
                                </select>

                            </div>
                        </div>

                        <a href="~/Fleet" style="text-decoration: none; color: #676a6c"><button class="btn btn-white" type="button">Back</button></a>
                        <button class="btn btn-primary" type="submit">Save</button>
                    </form>
                </div>
            </div>


        </div>
    </div>
</div>