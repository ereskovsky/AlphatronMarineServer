@model AlphatronMarineServer.Models.Product
@{

}
<link href="~/Content/daterangepicker-bs3.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-datepicker.js"></script>
<div style="margin: 0px" class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h2>Vessel</h2>
        <ol class="breadcrumb">
            <li>
                <a href="~/">Main</a>
            </li>
            <li class="active">
                <strong>Add or Change User</strong>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <form autocomplete="off" method="post" class="form-horizontal" role="form" enctype="multipart/form-data">
                        <div style="display:none" class="form-group">
                            <label class="col-sm-2 control-label">ID</label>
                            <div class="col-sm-5"><input type="text" disabled name="ID" class="form-control" value="@Model.ID"></div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Name</label>

                            <div class="col-sm-5"><input type="text" name="Name" class="form-control" value="@Model.Name"></div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Picture</label>

                            <div class="col-sm-5"><input type="file" name="Image" class="form-control" value="@Model.Image"></div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Short Description</label>

                            <div class="col-sm-5"><input type="text" name="ShortDescription" class="form-control" value="@Model.ShortDescription"></div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Full Description</label>

                            <div class="col-sm-5"><input style="height: 300px" type="text" name="FullDescription" class="form-control" value="@Model.FullDescription"></div>
                        </div>

                        <a href="~/Products" style="text-decoration: none; color: #676a6c"><button class="btn btn-white" type="button">Back</button></a>
                        <button class="btn btn-primary" type="submit">Save</button>
                    </form>
                </div>
            </div>


        </div>
    </div>
</div>