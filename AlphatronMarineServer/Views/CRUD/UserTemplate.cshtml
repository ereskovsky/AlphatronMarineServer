@model AlphatronMarineServer.Models.User
@{

}
<link href="~/Content/daterangepicker-bs3.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-datepicker.js"></script>
<div style="margin: 0px" class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h2>Vessel</h2>
        <ol class="breadcrumb">
            <li>
                <a href="~/">Main</a>
            </li>
            <li class="active">
                <strong>Add or Change User</strong>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <form autocomplete="off" method="post" class="form-horizontal" role="form" enctype="multipart/form-data">
                        <div style="display:none"  class="form-group">
                            <label class="col-sm-2 control-label">ID</label>
                            <div class="col-sm-5"><input type="text" name="ID" class="form-control" value="@Model.ID"></div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Name</label>

                            <div class="col-sm-5"><input type="text" name="Name" class="form-control" value="@Model.Name"></div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Email</label>

                            <div class="col-sm-5"><input type="text" name="Email" class="form-control" value="@Model.Email"></div>
                        </div>
                        @if (ViewBag.UID == 0) {
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Password</label>
                            <div class="col-sm-5"><input type="text" name="Password" class="form-control" value="@Model.Password"></div>
                        </div>
                        }
                        else
                        {
                            <div style="display: none" class="form-group">
                            <label class="col-sm-2 control-label">Password</label>
                            <div class="col-sm-5"><input type="text" name="Password" class="form-control" value="@Model.Password"></div>
                        </div>
                        }
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Role</label>
                            <div class="col-sm-5">
                                <select class="form-control m-b" name="RoleID">
                                    @if (Model.RoleID != 0)
            {
                        <option value="@Model.RoleID">@Model.Roles.Name</option>
}

                                    @foreach (var item in ViewBag.Roles)

            {

                        <option value="@item.ID">@item.Name</option>
}
                                </select>

                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Company</label>
                            <div class="col-sm-5">
                                <select class="form-control m-b" name="CompanyID">
                                    @if (Model.CompanyID != null)
                                    {
                                        <option value="@Model.CompanyID">@Model.Company.Name</option>
                                    }

                                    @foreach (var item in ViewBag.Companies)

                                    {

                                        <option value="@item.ID">@item.Name</option>
                                    }
                                </select>

                            </div>
                        </div>

                        <a href="~/Users" style="text-decoration: none; color: #676a6c"><button class="btn btn-white" type="button">Back</button></a>
                        <button class="btn btn-primary" type="submit">Save</button>
                    </form>
                </div>
            </div>


        </div>
    </div>
</div>